{
  "extends": "airbnb",
  "env": {
    "node": true,
    "mocha": true,
  },
  "rules": {
    "max-len": [2, 200, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }],
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",
    "linebreak-style": "off",
    "react/no-find-dom-node": "off",
    "react/prefer-stateless-function": "off",
    "react/no-string-refs": "off",
    "react/prop-types": [ 2, {"ignore": ["children","className"] }],
    "class-methods-use-this": [2, { "exceptMethods": [
      "findType",
      "createLDObject",
      "addLink",
      "formatDate",
      "renderHeader",
      "removeItem",
      "componentWillMount",
      "render",
      "getInitialState",
      "getDefaultProps",
      "getChildContext",
      "componentDidMount",
      "componentWillReceiveProps",
      "shouldComponentUpdate",
      "componentWillUpdate",
      "componentDidUpdate",
      "componentWillUnmount",
    ] }],
  },
  "globals": {
    "fetch": false,
    "window": false,
    "location": false,
    "document": false,
  },
}
